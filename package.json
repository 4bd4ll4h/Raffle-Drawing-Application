{
  "name": "raffle-drawing-application",
  "version": "1.0.0",
  "description": "A comprehensive Electron desktop application for managing and conducting raffle drawings with CS2-style animations",
  "main": "dist/main/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "webpack --config webpack.main.config.js --mode development --watch",
    "dev:renderer": "webpack serve --config webpack.renderer.config.js --mode development",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "webpack --config webpack.main.config.js --mode production",
    "build:renderer": "webpack --config webpack.renderer.config.js --mode production",
    "start": "electron dist/main/main.js",
    "pack": "electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux",
    "dist:all": "npm run build && electron-builder --win --mac --linux",
    "publish": "npm run build && electron-builder --publish=always",
    "publish:win": "npm run build && electron-builder --win --publish=always",
    "publish:mac": "npm run build && electron-builder --mac --publish=always",
    "publish:linux": "npm run build && electron-builder --linux --publish=always",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "rebuild-sqlite3": "electron-rebuild -f -w better-sqlite3"
  },
  "keywords": [
    "electron",
    "react",
    "typescript",
    "raffle",
    "drawing",
    "cs2",
    "animation"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/archiver": "^6.0.3",
    "@types/better-sqlite3": "^7.6.13",
    "@types/sql.js": "^1.4.9",
    "antd": "^5.27.1",
    "archiver": "^7.0.1",
    "axios": "^1.11.0",
    "better-sqlite3": "^12.2.0",
    "csv-parse": "^6.1.0",
    "csv-stringify": "^6.6.0",
    "dayjs": "^1.11.13",
    "electron-updater": "^6.6.2",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.3",
    "framer-motion": "^10.18.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.30.1",
    "sharp": "^0.33.5",
    "sql.js": "^1.13.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/csv-parse": "^1.2.5",
    "@types/csv-stringify": "^3.1.3",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.11",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^8.2.2",
    "css-loader": "^6.11.0",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9",
    "eslint": "^8.57.1",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.6.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.5",
    "style-loader": "^3.3.4",
    "ts-jest": "^29.4.1",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.2",
    "webpack": "^5.101.3",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.2"
  },
  "build": {
    "appId": "com.raffledrawing.app",
    "productName": "Raffle Drawing Application",
    "copyright": "Copyright Â© 2024 Raffle Drawing Application",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "!node_modules/**/*.{md,txt}",
      "!node_modules/**/test/**",
      "!node_modules/**/__tests__/**",
      "!node_modules/**/docs/**",
      "!node_modules/**/example/**",
      "!node_modules/**/examples/**"
    ],
    "extraResources": [
      {
        "from": "app-data",
        "to": "app-data",
        "filter": [
          "**/*"
        ]
      }
    ],
    "publish": {
      "provider": "github",
      "owner": "your-github-username",
      "repo": "raffle-drawing-app"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "build/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "extendInfo": {
        "NSCameraUsageDescription": "This app needs access to camera for recording raffle drawings.",
        "NSMicrophoneUsageDescription": "This app needs access to microphone for recording raffle drawings with audio.",
        "NSDocumentsFolderUsageDescription": "This app needs access to documents folder to save raffle data and recordings."
      }
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "title": "Raffle Drawing Application ${version}",
      "backgroundColor": "#2c3e50"
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "publisherName": "Raffle Drawing Application",
      "verifyUpdateCodeSignature": false,
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Raffle Drawing",
      "include": "build/installer.nsh",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "linux": {
      "icon": "build/icon.png",
      "category": "Office",
      "target": [
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "desktop": {
        "Name": "Raffle Drawing Application",
        "Comment": "Professional raffle drawing application with CS2-style animations",
        "Categories": "Office;Utility;",
        "Keywords": "raffle;drawing;animation;cs2;"
      }
    },
    "deb": {
      "depends": [
        "gconf2",
        "gconf-service",
        "libnotify4",
        "libappindicator1",
        "libxtst6",
        "libnss3"
      ],
      "afterInstall": "build/linux-after-install.sh"
    },
    "rpm": {
      "depends": [
        "libXScrnSaver",
        "libnotify",
        "libnss3"
      ],
      "afterInstall": "build/linux-after-install.sh"
    }
  }
}
